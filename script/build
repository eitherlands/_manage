#!/usr/bin/env manage
#
# vim: set ft=sh:
#
# <doc>
#
# Build manage
#
# </doc>
#
# <import>
#
# collection-shell
# collection-message
# collection-string
#
# </import>
#
# <dependency>
#
# bash
#
# </dependency>


main ()
{
    verbose true
    strict true

    _ info "Nothing to build, manage works right away."
    _ info "Running tests..."
    manage test
}

onexit ()
{
    if (( $1 == 0 ))
    then
        _ warn "Exiting."
    else
        _ error "An error with exit code \"$1\" has occured."
    fi
}

