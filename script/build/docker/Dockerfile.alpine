FROM alpine:3.2
MAINTAINER Victor Vieux <victor@docker.com>

ENV  CI=true
COPY bin manage/bin
COPY common manage/common
COPY libexec manage/libexec
COPY script manage/script
COPY test manage/test
COPY vendor manage/vendor
COPY .manage.yml manage/.manage.yml

RUN apk update &&  \
    apk upgrade && \
    apk add        \
    bash           \
    sed            \
    gawk           \
    coreutils      \
    && rm -rf /var/cache/apk/*

ENTRYPOINT ["manage/bin/manage"]
CMD ["help"]

