#!/usr/bin/env manage
#
# vim: set ft=sh:
#
# <doc>
#
# Hello World
#
# </doc>
#
# <import>
#
# collection-shell
# collection-message
#
# </import>
#
# <dependency>
#
# bash
#
# </dependency>

main ()
{
    _ verbose true
    _ strict true
    echo "Hello World!"
    echo "Script name: $(basename "${BASH_SOURCE[0]}")"
    echo "Caller name: $(basename "$0")"
    echo "Arguments  : $@"
    echo "PWD        : ${PWD}"
    echo "Argument 1 : $1"
    echo "Argument 2 : $2"
    echo "Argument 3 : $3"
    echo "Repository : ${MANAGEREPOSITORY}"
    echo "M directory: ${MANAGEDIRECTORY}"
}

onexit ()
{
    if (( $1 == 0 ))
    then
        _ info "Exiting."
    else
        _ error "An error with exit code \"$1\" has occured."
    fi
}

