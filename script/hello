#!/usr/bin/env manage
#
# vim: set ft=sh:
#
# <doc>
#
# Basic manage script
#
# </doc>
#
# <import>
#
# collection-shell
# collection-message
# collection-string
#
# </import>
#
# <dependency>
#
# bash
#
# </dependency>


main ()
{
    verbose true
    strict true

    echo "${HELLO}"
    echo "Script name: $(basename "${BASH_SOURCE[0]}")"
    echo "Caller name: $(basename "$0")"
    echo "Arguments  : $@"
    echo "PWD        : ${PWD}"
    echo "Argument 1 : $1"
    echo "Argument 2 : $2"
    echo "Argument 3 : $3"
    echo "Repository : ${MANAGEREPOSITORY}"
}

onexit ()
{
    if (( $1 == 0 ))
    then
        _ warn "Exiting."
    else
        _ error "An error with exit code \"$1\" has occured."
    fi
}

completion () {
    case "$1" in
        robin)
            echo "Peter"
            echo "Molly:Leading online fashion boutique."
            ;;
        world)
            echo "Map:World maps, atlases and geography."
            echo "News"
            ;;
        files)
            # Fallback to file/dir completion.
            return 1
            ;;
        *)
            echo 'robin:This is a description for zsh tab completion.'
            echo 'world:This is another description for zsh tab completion.'
            echo 'files:file/dir completion'
        esac
}
