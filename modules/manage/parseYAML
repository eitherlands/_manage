#!/usr/bin/env bash
# @import array/includes
# @import manage/yaml

parseYAML () {
    eval "$(yaml "${MANAGE_REPOSITORY}/.manage.yml" "yml")"

    MANAGE_SCRIPT_DIRECTORY="$(yml scripts || echo script)"

    [ -z "${MANAGEPUBLIC}" ] &&
        MANAGEPUBLIC=($(yml enable || echo -e "help\ntest"))

    if includes MANAGEPUBLIC "test"
    then
        MANAGE_TEST_DIRECTORY="${MANAGE_REPOSITORY}/$(yml test_tests || echo "script/test")"
    fi

    checkDependencies "$(yml dependencies || echo)"
}
